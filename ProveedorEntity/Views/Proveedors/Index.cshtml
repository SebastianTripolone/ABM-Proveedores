@model IEnumerable<ProveedorEntity.Models.Proveedor>

@{
    ViewData["Title"] = "Lista";
}

<h2>Proveedores</h2>

<p class="text-left">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<div class="text-right">
    <div class="d-inline">
        <a asp-action="ExportarCSV" class="btn btn-success"><i class="fas fa-file-csv"></i> Exportar a CSV</a>
        <a asp-action="ExportarPDF" class="btn btn-light"><i class="fas fa-file-pdf"></i> Exportar a PDF</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @if (item.Imagen != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" alt="Proveedor Imagen" style="width:100px;height:100px;"/>
                }
                else
                {
                    <span>No hay imagen disponible</span>
                }
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Borrar
                    </a>
            </td>
        </tr>
    }
    </tbody>
</table>